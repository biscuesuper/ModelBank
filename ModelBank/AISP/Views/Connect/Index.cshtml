@{
}


<div class="container-fluid">
        <div class="row" style="height:95vh">
            
            <div class="steps col-4">
                <div class="mb-5" style="font-family: 'Raleway', sans-serif; font-size:1.5em; padding:7vh;">
                    <span><h1>5 Easy steps for our customers</h1></span><br/>
                    <span>1.   Log into your Happy FinTech profile</span><br/>
                    <br/>
                    <span>2.a. Connect new bank account</span><br/>
                     @if (ViewData["ModelBankUrl"] != null)
                    {
                        <span>2.b. Select your bank</span><br/>
                        <span><b>2.c. Consent</b></span><br/>
                    }
                    else{
                        <b>
                        <span>2.b. Select your bank</span><br/>
                        </b>
                        <span>2.c. Consent</span><br/>
                    }
                    
                    <br/>
                    <span>3.a. Navigate to your bank's login page</span><br/>
                    <span>3.b. Log into your bank account</span><br/>
                    <br/>
                    <span>4.a. Go back to Happy FinTech</span><br/>
                    <span>4.b. Test your connection</span><br/>
                    <br/>
                    <span>5.   View your bank data on Happy Fintech</span><br/>
                    
                </div>
            </div>
            <div class="fintech col-8">
                <br /><br />
                <div class="text-center mb-5">
                    <h1 class="display-4">Happy FinTech</h1>

                    <!-- Page -->
                    

                    @if (ViewData["ModelBankUrl"] == null)
                    {   
                        <h3>Select your bank</h3>
                        <div>
                            <a asp-area="" class="btn btn-primary btn-lg" asp-controller="Connect" asp-action="SelectedModelBank">Model Bank</a>
                        </div> 
                        <br />
                    }
                    else
                    {
                        <h3>ModelBank</h3>
                        <br/>
                        <div>
                            <a class="btn btn-primary btn-lg" href=@ViewData["ModelBankUrl"] target="_blank">Consent</a>
                        </div>
                        <br />
                        <div>
                            <a asp-area="" class="btn btn-primary btn-lg" asp-controller="Connect" asp-action="LinkAccount">Link Account</a>
                        </div>
               
                    }

                    <!-- End Page -->
                </div>
            </div>

        </div>
</div>




